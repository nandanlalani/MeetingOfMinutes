@model MOM.Models.MOM_Department
@{
    ViewData["Title"] = "Add New Department";
}

<section class="py-4">
    <div class="container-fluid px-4">

        <!-- Page Title + Breadcrumb -->
        <div class="mb-3">
            <h1 class="h3 mb-1 fw-semibold">Add New Department</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0 small">
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("Dashboard", "Home")" class="text-decoration-none">Home</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("Department", "Department")" class="text-decoration-none">Departments</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">Add New Department</li>
                </ol>
            </nav>
        </div>

        <div class="row justify-content-center">
            <div class="col-12 col-lg-10 col-xl-8">

                <!-- Form Card -->
                <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
                    <div class="card-header border-0 px-4 py-3 text-white"
                         style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                        <div class="d-flex align-items-center gap-2">
                            <i class="bi bi-building-add"></i>
                            <h5 class="mb-0 fw-semibold">Add New Department</h5>
                        </div>
                    </div>

                    <div class="card-body p-4 p-lg-5">
                        <form asp-action="AddNewDepartment" method="post" id="departmentForm" novalidate>
                            <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>
                            <div class="row g-4">

                                <!-- Department Name -->
                                <div class="col-md-6">
                                    <label asp-for="DepartmentName" class="form-label fw-semibold">
                                        <i class="bi bi-building me-2"></i>Department Name
                                    </label>
                                    <input type="text"
                                           class="form-control py-3"
                                           id="departmentName"
                                           asp-for="DepartmentName"
                                           placeholder="Enter department name"
                                           
                                           required />
                                    <span  asp-validation-for="DepartmentName" class="text-danger small"></span>
                                </div>
                             
                                <!-- Description -->
                                <div class="col-12">
                                    <label asp-for="DepartmentDescription" class="form-label fw-semibold">
                                        <i class="bi bi-chat-text me-2"></i>Department Description
                                    </label>
                                    <textarea class="form-control py-3"
                                              id="description"
                                              asp-for="DepartmentDescription"
                                              rows="5"
                                              placeholder="Enter department description, responsibilities, and objectives"></textarea>
                                    <span asp-validation-for="DepartmentDescription" class="text-danger small"></span>
                                </div>

                                <!-- Preview -->
                                <div class="col-12">
                                    <label class="form-label fw-semibold">
                                        <i class="bi bi-eye me-2"></i>Preview
                                    </label>

                                    <div class="card border-0 shadow-sm rounded-4">
                                        <div class="card-body p-3 p-md-4">
                                            <div class="d-flex align-items-center" id="previewSection">
                                                <div id="previewIcon"
                                                     class="d-flex align-items-center justify-content-center rounded-3 bg-primary text-white me-3 flex-shrink-0"
                                                     style="width:52px;height:52px;">
                                                    <i class="bi bi-building fs-4"></i>
                                                </div>

                                                <div class="min-w-0">
                                                    <div class="fw-semibold" id="previewName">Department Name</div>
                                                    <small class="text-muted d-block text-truncate" id="previewDescription">
                                                        Description will appear here
                                                    </small>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>

                            <!-- Guidelines -->
                            <div class="alert alert-info mt-4 mb-0 rounded-4">
                                <div class="d-flex">
                                    <i class="bi bi-info-circle-fill me-2 mt-1"></i>
                                    <div>
                                        <div class="fw-semibold mb-2">Department Setup Guidelines</div>
                                        <ul class="mb-0 small">
                                            <li>Choose a clear and descriptive name for the department</li>
                                            <li>Assign a qualified department head with leadership experience</li>
                                            <li>Set realistic budget allocations based on department needs</li>
                                            <li>Select appropriate icons and colors for easy identification</li>
                                            <li>Provide detailed description of department responsibilities</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>

                            <!-- Actions -->
                            <div class="d-flex justify-content-end gap-2 mt-4">
                                <a href="@Url.Action("Department", "Department")" class="btn btn-outline-secondary px-3">
                                    <i class="bi bi-arrow-left me-2"></i>Back to List
                                </a>

                                <button type="submit" class="btn btn-primary px-3" id="submitBtn">
                                    <i class="bi bi-check-circle me-2"></i>Create Department
                                </button>
                            </div>

                        </form>
                    </div>
                </div>

            </div>
        </div>

    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
