@model MOM.Models.MOM_MeetingType
@{
    ViewData["Title"] = "Add New Meeting Type";
}

<section class="py-4">
    <div class="container-fluid px-4">

        <!-- Page Title + Breadcrumb -->
        <div class="mb-3">
            <h1 class="h3 mb-1 fw-semibold">Add New Meeting Type</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0 small">
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("Dashboard", "Home")" class="text-decoration-none">Home</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("MeetingType", "MeetingType")" class="text-decoration-none">Meeting Types</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">Add New Meeting Type</li>
                </ol>
            </nav>
        </div>

        <div class="row justify-content-center">
            <div class="col-12 col-lg-10 col-xl-8">

                <!-- Form Card -->
                <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
                    <div class="card-header border-0 px-4 py-3 text-white"
                         style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                        <div class="d-flex align-items-center gap-2">
                            <i class="bi bi-plus-circle-fill"></i>
                            <h5 class="mb-0 fw-semibold">Add New Meeting Type</h5>
                        </div>
                    </div>

                    <div class="card-body p-4 p-lg-5">
                        <form asp-action="AddNewMeetingType" method="post" id="meetingTypeForm" novalidate>
                            <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>
                            <div class="row g-4">

                                <!-- Meeting Type Name -->
                                <div class="col-md-6">
                                    <label for="meetingTypeName" class="form-label fw-semibold">
                                        <i class="bi bi-tag me-2"></i>Meeting Type Name
                                    </label>
                                    <input type="text"
                                           class="form-control py-3"
                                           id="meetingTypeName"
                                           asp-for="MeetingTypeName"
                                           placeholder="Enter meeting type name"
                                           required />
                                    <span asp-validation-for="MeetingTypeName" class="text-danger small"></span>
                                </div>

                                <!-- Remarks -->
                                <div class="col-12">
                                    <label for="remarks" class="form-label fw-semibold">
                                        <i class="bi bi-chat-text me-2"></i>Remarks &amp; Description
                                    </label>
                                    <textarea class="form-control py-3"
                                              id="remarks"
                                              asp-for="Remarks"
                                              rows="5"
                                              placeholder="Enter detailed description of this meeting type, its purpose, and usage guidelines"></textarea>
                                    <span asp-validation-for="Remarks" class="text-danger small"></span>
                                </div>

                                <!-- Preview -->
                                <div class="col-12">
                                    <label class="form-label fw-semibold">
                                        <i class="bi bi-eye me-2"></i>Preview
                                    </label>

                                    <div class="card border-0 shadow-sm rounded-4">
                                        <div class="card-body p-3 p-md-4">
                                            <div class="d-flex align-items-center" id="previewSection">
                                                <div id="previewIcon"
                                                     class="d-flex align-items-center justify-content-center rounded-3 bg-primary text-white me-3 flex-shrink-0"
                                                     style="width:52px;height:52px;">
                                                    <i class="bi bi-calendar-event fs-4"></i>
                                                </div>

                                                <div class="min-w-0">
                                                    <div class="fw-semibold" id="previewName">Meeting Type Name</div>
                                                    <small class="text-muted d-block text-truncate" id="previewDescription">
                                                        Description will appear here
                                                    </small>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>

                            <!-- Guidelines -->
                            <div class="alert alert-info mt-4 mb-0 rounded-4">
                                <div class="d-flex">
                                    <i class="bi bi-info-circle-fill me-2 mt-1"></i>
                                    <div>
                                        <div class="fw-semibold mb-2">Meeting Type Guidelines</div>
                                        <ul class="mb-0 small">
                                            <li>Choose a clear and descriptive name for the meeting type</li>
                                            <li>Select an appropriate category to help with organization</li>
                                            <li>Pick an icon and color that represents the meeting purpose</li>
                                            <li>Provide detailed remarks to help users understand when to use this type</li>
                                            <li>Meeting types can be used across all departments</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>

                            <!-- Actions -->
                            <div class="d-flex justify-content-end gap-2 mt-4">
                                <a href="@Url.Action("MeetingType", "MeetingType")" class="btn btn-outline-secondary px-3">
                                    <i class="bi bi-arrow-left me-2"></i>Back to List
                                </a>

                                <button type="submit" class="btn btn-primary px-3" id="submitBtn">
                                    <i class="bi bi-check-circle me-2"></i>Create Meeting Type
                                </button>
                            </div>

                        </form>
                    </div>
                </div>

            </div>
        </div>

    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Preview: name
        document.getElementById('meetingTypeName').addEventListener('input', function (e) {
            document.getElementById('previewName').textContent = e.target.value || 'Meeting Type Name';
        });

        // Preview: description
        document.getElementById('remarks').addEventListener('input', function (e) {
            const text = e.target.value || 'Description will appear here';
            document.getElementById('previewDescription').textContent =
                text.length > 60 ? text.substring(0, 60) + '...' : text;
        });

        // Preview: icon
        document.getElementById('iconSelect').addEventListener('change', function (e) {
            const iconEl = document.getElementById('previewIcon').querySelector('i');
            iconEl.className = 'bi ' + e.target.value + ' fs-4';
        });

        // Preview: color
        document.getElementById('colorSelect').addEventListener('change', function (e) {
            const box = document.getElementById('previewIcon');
            box.className = box.className.replace(/\bbg-\S+/g, '').trim();
            box.classList.add('bg-' + e.target.value);
        });

        // Submit loading state (only when validation passes)
        document.getElementById('meetingTypeForm').addEventListener('submit', function () {
            const form = document.getElementById('meetingTypeForm');
            if ($(form).valid()) {
                const submitBtn = document.getElementById('submitBtn');
                submitBtn.innerHTML = '<i class="bi bi-hourglass-split me-2"></i>Creating...';
                submitBtn.disabled = true;
            }
        });
    </script>
}
