@model MOM.Models.MOM_Staff
@{
    ViewData["Title"] = "Add New Staff Member";
}

<div class="pagetitle">
    <h1>Add New Staff Member</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Dashboard", "Home")">Home</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("StaffMember", "StaffMember")">Staff Members</a></li>
            <li class="breadcrumb-item active">Add New Staff Member</li>
        </ol>
    </nav>
</div><!-- End Page Title -->

<section class="section">
    <div class="row justify-content-center">
        <div class="col-lg-8">
           

            <!-- Add New Staff Member Form -->
            <div class="card shadow-sm">
                <div class="card-header d-flex align-items-center" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white;">
                    <i class="bi bi-person-plus-fill me-2"></i>
                    <h5 class="mb-0">Add New Staff Member</h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="AddNewStaffMember" method="post" id="staffForm" novalidate>
                        <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>
                        <div class="row g-4">
                            
                            <!-- Staff Name -->
                            <div class="col-md-6">
                                <label for="staffName" class="form-label">
                                    <i class="bi bi-person me-1"></i>Staff Name
                                </label>
                                <input type="text" class="form-control" id="staffName" asp-for="StaffName" 
                                       placeholder="Enter staff name" required>
                                <span asp-validation-for="StaffName" class="text-danger"></span>
                            </div>

                            <!-- Department -->
                            <div class="col-md-6">
                                <label for="department" class="form-label">
                                    <i class="bi bi-building me-1"></i>Department
                                </label>
                                <select class="form-select" id="department" asp-for="DepartmentID" required>
                                    <option value="" selected disabled>Select Department</option>
                                    <option value="1">Marketing</option>
                                    <option value="2">Development</option>
                                    <option value="3">Customer Service</option>
                                    <option value="4">Finance</option>
                                    <option value="5">Operations</option>
                                    <option value="6">Human Resources</option>
                                </select>
                                <span asp-validation-for="DepartmentID" class="text-danger"></span>
                            </div>

                            <!-- Email Address -->
                            <div class="col-md-6">
                                <label for="emailAddress" class="form-label">
                                    <i class="bi bi-envelope me-1"></i>Email Address
                                </label>
                                <input type="email" class="form-control" id="emailAddress" asp-for="EmailAddress" 
                                       placeholder="Enter email address" required>
                                <span asp-validation-for="EmailAddress" class="text-danger"></span>
                            </div>

                            <!-- Mobile Number -->
                            <div class="col-md-6">
                                <label for="mobileNumber" class="form-label">
                                    <i class="bi bi-telephone me-1"></i>Mobile Number
                                </label>
                                <input type="tel" class="form-control" id="mobileNumber" asp-for="MobileNo" 
                                       placeholder="Enter mobile number" required>
                                <div class="form-text">Example: +91 98765 43210</div>
                                <span asp-validation-for="MobileNo" class="text-danger"></span>
                            </div>

                            <!-- Remarks -->
                            <div class="col-12">
                                <label for="remarks" class="form-label">
                                    <i class="bi bi-chat-text me-1"></i>Remarks
                                </label>
                                <textarea class="form-control" id="remarks" asp-for="Remarks" rows="4" 
                                          placeholder="Enter any additional remarks (optional)"></textarea>
                                <span asp-validation-for="Remarks" class="text-danger"></span>
                            </div>

                        </div>

                        <!-- Guidelines Section -->
                        <div class="alert alert-info mt-4" role="alert">
                            <div class="d-flex">
                                <i class="bi bi-info-circle-fill me-2 mt-1"></i>
                                <div>
                                    <h6 class="alert-heading mb-2">Staff Member Guidelines</h6>
                                    <ul class="mb-0 small">
                                        <li>Email address must be unique for each staff member</li>
                                        <li>Use official email addresses for better communication</li>
                                        <li>Mobile number should include country code if international</li>
                                        <li>Remarks field can include position, responsibilities, or special notes</li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                        <!-- Form Actions -->
                        <div class="d-flex justify-content-end gap-2 mt-4">
                            <a href="@Url.Action("StaffMember", "StaffMember")" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-1"></i>Back to List
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle me-1"></i>Create Staff Member
                            </button>
                        </div>

                    </form>
                </div>
            </div>

        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<style>
    .card {
        border: none;
        border-radius: 12px;
    }
    
    .card-header {
        border-bottom: none;
        border-radius: 12px 12px 0 0 !important;
    }
    
    .form-label {
        font-weight: 600;
        color: #495057;
        margin-bottom: 8px;
    }
    
    .form-control, .form-select {
        border-radius: 8px;
        border: 1px solid #e0e6ed;
        padding: 12px 16px;
        transition: all 0.3s ease;
    }
    
    .form-control:focus, .form-select:focus {
        border-color: #667eea;
        box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
    }
    
    .btn {
        border-radius: 8px;
        padding: 10px 20px;
        font-weight: 500;
        transition: all 0.3s ease;
    }
    
    .btn-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
    }
    
    .btn-primary:hover {
        background: linear-gradient(135deg, #5a6fd8 0%, #6a4190 100%);
        transform: translateY(-1px);
    }
    
    .alert-info {
        background-color: #e7f3ff;
        border-color: #b8daff;
        color: #0c5460;
        border-radius: 8px;
    }
    
    .form-text {
        font-size: 0.875rem;
        color: #6c757d;
    }
    
    .shadow-sm {
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075) !important;
    }
</style>