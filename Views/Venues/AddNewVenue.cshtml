            <div class="card shadow-sm">
                <div class="card-header d-flex align-items-center" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white;">
                    <i class="bi bi-geo-alt-fill me-2"></i>
                    <h5 class="mb-0">Add New Meeting Venue</h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="AddNewVenue" method="post" id="venueForm" novalidate>
                        <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>
                        <div class="row g-4">
                            
                            <!-- Venue Name -->
                            <div class="col-md-6">
                                <label for="venueName" class="form-label">
                                    <i class="bi bi-geo-alt me-1"></i>Venue Name
                                </label>
                                <input type="text" class="form-control" id="venueName" asp-for="MeetingVenueName" 
                                       placeholder="Enter venue name" required>
                                <span asp-validation-for="MeetingVenueName" class="text-danger"></span>
                            </div>

                            <!-- Venue Code -->
                            <div class="col-md-6">
                                <label for="venueCode" class="form-label">
                                    <i class="bi bi-hash me-1"></i>Venue Code
                                </label>
                                <input type="text" class="form-control" id="venueCode" 
                                       placeholder="e.g., VEN001" required>
                                <div class="form-text">Unique identifier for the venue</div>
                            </div>

                            <!-- Location Type -->
                            <div class="col-md-6">
                                <label for="locationType" class="form-label">
                                    <i class="bi bi-building me-1"></i>Location Type
                                </label>
                                <select class="form-select" id="locationType" required>
                                    <option value="" selected disabled>Select Location Type</option>
                                    <option value="main">Main Building</option>
                                    <option value="annex">Annex Building</option>
                                    <option value="remote">Remote Location</option>
                                    <option value="virtual">Virtual Room</option>
                                </select>
                            </div>

                            <!-- Floor & Room -->
                            <div class="col-md-6">
                                <label for="floorRoom" class="form-label">
                                    <i class="bi bi-door-open me-1"></i>Floor & Room Number
                                </label>
                                <input type="text" class="form-control" id="floorRoom" 
                                       placeholder="e.g., Floor 5, Room 501">
                                <div class="form-text">Physical location details</div>
                            </div>

                            <!-- Capacity -->
                            <div class="col-md-4">
                                <label for="capacity" class="form-label">
                                    <i class="bi bi-people me-1"></i>Capacity
                                </label>
                                <input type="number" class="form-control" id="capacity" 
                                       placeholder="Number of people" min="1" max="500" required>
                            </div>

                            <!-- Venue Type -->
                            <div class="col-md-4">
                                <label for="venueType" class="form-label">
                                    <i class="bi bi-collection me-1"></i>Venue Type
                                </label>
                                <select class="form-select" id="venueType" required>
                                    <option value="" selected disabled>Select Type</option>
                                    <option value="conference">Conference Room</option>
                                    <option value="meeting">Meeting Room</option>
                                    <option value="training">Training Room</option>
                                    <option value="huddle">Huddle Room</option>
                                    <option value="virtual">Virtual Room</option>
                                    <option value="workshop">Workshop Room</option>
                                </select>
                            </div>

                            <!-- Hourly Rate -->
                            <div class="col-md-4">
                                <label for="hourlyRate" class="form-label">
                                    <i class="bi bi-currency-dollar me-1"></i>Hourly Rate
                                </label>
                                <input type="number" class="form-control" id="hourlyRate" 
                                       placeholder="Cost per hour" min="0" step="0.01">
                                <div class="form-text">Optional booking cost</div>
                            </div>

                            <!-- Equipment & Amenities -->
                            <div class="col-12">
                                <label class="form-label">
                                    <i class="bi bi-tools me-1"></i>Equipment & Amenities
                                </label>
                                <div class="row g-2">
                                    <div class="col-md-3">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="projector">
                                            <label class="form-check-label" for="projector">
                                                üìΩÔ∏è Projector
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="wifi">
                                            <label class="form-check-label" for="wifi">
                                                üì∂ WiFi
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="ac">
                                            <label class="form-check-label" for="ac">
                                                ‚ùÑÔ∏è Air Conditioning
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="whiteboard">
                                            <label class="form-check-label" for="whiteboard">
                                                üìù Whiteboard
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="tvScreen">
                                            <label class="form-check-label" for="tvScreen">
                                                üì∫ TV Screen
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="soundSystem">
                                            <label class="form-check-label" for="soundSystem">
                                                üîä Sound System
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="videoConf">
                                            <label class="form-check-label" for="videoConf">
                                                üìπ Video Conferencing
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="computers">
                                            <label class="form-check-label" for="computers">
                                                üíª Computers
