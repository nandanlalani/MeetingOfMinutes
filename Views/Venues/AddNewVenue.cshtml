                            <!-- Preview Section -->
                            <div class="col-12">
                                <label class="form-label">
                                    <i class="bi bi-eye me-1"></i>Preview
                                </label>
                                <div class="card border">
                                    <div class="card-body p-3">
                                        <div class="d-flex align-items-center" id="previewSection">
                                            <div class="venue-icon bg-primary text-white me-3" id="previewIcon">
                                                <i class="bi bi-building"></i>
                                            </div>
                                            <div class="flex-grow-1">
                                                <h6 class="mb-0" id="previewName">Venue Name</h6>
                                                <small class="text-muted" id="previewDescription">Description will appear here</small>
                                            </div>
                                            <div class="text-end">
                                                <span class="badge bg-info rounded-pill" id="previewCapacity">0 people</span>
                                            </div>
                                        </div>
                                        <div class="mt-2" id="previewEquipment">
                                            <!-- Equipment badges will appear here -->
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>

                        <!-- Guidelines Section -->
                        <div class="alert alert-info mt-4" role="alert">
                            <div class="d-flex">
                                <i class="bi bi-info-circle-fill me-2 mt-1"></i>
                                <div>
                                    <h6 class="alert-heading mb-2">Venue Setup Guidelines</h6>
                                    <ul class="mb-0 small">
                                        <li>Choose a descriptive name that indicates the venue's purpose</li>
                                        <li>Set realistic capacity based on room size and safety regulations</li>
                                        <li>Select all available equipment to help users choose appropriate venues</li>
                                        <li>For virtual rooms, include meeting platform details in description</li>
                                        <li>Consider accessibility requirements when setting up physical venues</li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                        <!-- Form Actions -->
                        <div class="d-flex justify-content-end gap-2 mt-4">
                            <a href="@Url.Action("Venues", "Venues")" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-1"></i>Back to List
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle me-1"></i>Create Venue
                            </button>
                        </div>

                    </form>
                </div>
            </div>

        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Real-time preview updates
        document.getElementById('venueName').addEventListener('input', function(e) {
            const previewName = document.getElementById('previewName');
            previewName.textContent = e.target.value || 'Venue Name';
        });

        document.getElementById('description').addEventListener('input', function(e) {
            const previewDescription = document.getElementById('previewDescription');
            const text = e.target.value || 'Description will appear here';
            previewDescription.textContent = text.length > 60 ? text.substring(0, 60) + '...' : text;
        });

        document.getElementById('capacity').addEventListener('input', function(e) {
            const previewCapacity = document.getElementById('previewCapacity');
            const capacity = e.target.value || '0';
            previewCapacity.textContent = capacity + ' people';
        });

        document.getElementById('iconSelect').addEventListener('change', function(e) {
            const previewIcon = document.getElementById('previewIcon').querySelector('i');
            previewIcon.className = 'bi ' + e.target.value;
        });

        document.getElementById('colorSelect').addEventListener('change', function(e) {
            const previewIconContainer = document.getElementById('previewIcon');
            // Remove all bg- classes
            previewIconContainer.className = previewIconContainer.className.replace(/bg-\w+/g, '');
            // Add new bg- class
            previewIconContainer.classList.add('bg-' + e.target.value);
        });

        // Equipment preview update
        function updateEquipmentPreview() {
            const previewEquipment = document.getElementById('previewEquipment');
            const checkboxes = document.querySelectorAll('input[type="checkbox"]:checked');
            
            previewEquipment.innerHTML = '';
            checkboxes.forEach(checkbox => {
                const label = document.querySelector(`label[for="${checkbox.id}"]`).textContent.trim();
                const badge = document.createElement('span');
                badge.className = 'badge bg-success me-1 mb-1';
                badge.textContent = label;
                previewEquipment.appendChild(badge);
            });
        }

        // Add event listeners to all checkboxes
        document.querySelectorAll('input[type="checkbox"]').forEach(checkbox => {
            checkbox.addEventListener('change', updateEquipmentPreview);
        });

        // Auto-generate venue code
        document.getElementById('venueName').addEventListener('input', function(e) {
            const name = e.target.value.toUpperCase().replace(/[^A-Z]/g, '').substring(0, 3);
            const code = name ? 'VEN' + name : '';
            document.getElementById('venueCode').value = code;
        });

        // Loading state (only when validation passes)
        document.getElementById('venueForm').addEventListener('submit', function() {
            if ($(this).valid()) {
                const submitBtn = this.querySelector('button[type="submit"]');
                submitBtn.innerHTML = '<i class="bi bi-hourglass-split me-1"></i>Creating...';
                submitBtn.disabled = true;
            }
        });
    </script>
}

